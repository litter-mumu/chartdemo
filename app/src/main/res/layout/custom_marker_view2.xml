<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="85dp"
    android:layout_marginBottom="-11.5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvContent"
        app:layout_constraintBottom_toBottomOf="@+id/tvContent"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="24dp"
        android:layout_height="1dp"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="@id/fl_circle"
        app:layout_constraintLeft_toRightOf="@id/fl_circle"
        app:layout_constraintTop_toTopOf="@id/fl_circle" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:gravity="center"
        android:text="1811.23"
        android:textSize="12sp"
        android:background="@drawable/bg_high_value_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/view_line"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
